@{
    ViewBag.Title = "Server";
}

<h4 class="userId">@Session["Id"]</h4>
<div class="row">
    <div class="col-lg-12">

    </div>
    <div class="usersBar">
        <ul>
            <li><span class="bi bi-people"></span></li>
        </ul>
    </div>
    <div class="rightbar">
        <ul>
            <li onclick="alert(userId)"><span class="bi bi-person"></span></li>
            <li onclick="alert(userId)"><span class="bi bi-mailbox"></span></li>
        </ul>
    </div>
</div>

<div class="navbar-fixed-bottom chatBar" style="display:none;">
    <div class="chatBox">
        <div class="header">
            <h5>user name</h5>
        </div>
        <div class="body">
            <ul>
                <li class="sender"><div></div><h5>sender message</h5></li>
                <li class="receiver"><div></div><h5>receiver message</h5></li>
            </ul>
        </div>
        <hr />
        <div class="chatFooter">
            <input type="text" placeholder="message" id="MsgField" />
            <button onclick="">send</button>
        </div>
    </div>
</div>
@section scripts{
    <script src="~/Scripts/jquery.signalR-2.4.2.min.js" type="text/javascript"></script>
    <script src="~/signalR/js" type="text/javascript"></script>
    <script>
        var userId = $(".userId").text();
                    //$(".userId").hide();

    </script>
    <script src="~/Scripts/SignalR.js" type="text/javascript"></script>
}